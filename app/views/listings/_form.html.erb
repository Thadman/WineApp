<%= form_with model: @listing, local: true, html: {style: "width:500px; margin : 0 auto;"} do |form| %>

<div class="form-group"> 
  <%# <%= form.label :name %>
  <%= form.text_field :name, placeholder: "Name", class: "form-control form-control-sm" %>
</div>

<div class="form-group">
  <%# <%= form.label :region %> 
  <%= form.text_field :region, placeholder: "Region", class: "form-control form-control-sm" %>
</div>

<div class="form-group">
  <%# <%= form.label :vintage %> 
  <%= form.text_field :vintage, placeholder: "Year", class: "form-control form-control-sm" %>
</div>

<div class="form-group">
  <%# <%= form.label :notes %> 
  <%= form.text_area :notes, placeholder: "Some Tasting Notes", class: "form-control form-control-sm" %>
</div>

<div class="form-group">
  <%# <%= form.label :description %> 
  <%= form.text_area :description, placeholder: "About the Wine", class: "form-control form-control-sm" %>
</div>

<div class="form-group">
  <%# <%= form.label :alcohol %> 
  <%= form.text_field :alcohol, placeholder: "Alcohol Percentage", class: "form-control form-control-sm" %>
</div>

<div class="form-group">
  <%# <%= form.label :size %> 
  <%= form.text_field :size, placeholder: "Size (ml)", class: "form-control form-control-sm" %>
</div>

<div class="form-group">
  <%# <%= form.label :price %>
  <%= form.text_field :price, placeholder: "Whatcha Pay?", class: "form-control form-control-sm" %>
</div>

<div class="form-group">
  <%# <%= form.label :grape_id %> 
  <%= form.collection_select(:grape_id, Grape.all, :id, :grape_type, class: "form-control form-control-sm") %>
</div>

<div class="form-group">
  <%# <%= form.label :wine_type %>
  <%= form.collection_select(:wine_type_id, WineType.all, :id, :variety, class: "form-control form-control-sm") %>
</div>

<div class="form-group">
  <%= form.label :picture %>
  <%= form.file_field :picture, accept: 'image/png,image/gif,image/jpeg,image/jpg', class: "form-control form-control-lg" %>
</div>

<div>
  <%= form.submit class: "btn btn-light"%>
</div>

<% end %>



