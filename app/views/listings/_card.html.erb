<div class="card border-light text-center my-3 col-md-4 col-xs-12"  style="max-width:30%; min-width:18rem;">
  <div class="card header">
    <p><%= "#{listing.name}" %></p>
  </div>
  <%= image_tag picture_for(listing) , alt: "#{listing.name} image", class: 'card-img-top img_fluid' %>
  <div class="card-body">
    <h5 class="card-title"><%=  listing.name %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= listing.region %></h6>
    <p class="card-text"><%= listing.notes %></p>
    <%= link_to 'View', listing_path(listing), class: 'btn btn-light' %>
  </div>
</div>
